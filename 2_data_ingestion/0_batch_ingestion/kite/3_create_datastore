LINES=`wc -l $0|cut -d ' ' -f 1`
SKIP=`grep -n '###START HERE###' $0|tail -1|cut -d ':' -f 1`
LINES=$(($LINES-$SKIP))
echo -e "\n\033[0;32m3# INITIALIZING A DATASET ON HDFS:\033[0m \n>>>\033[1;33m"
tail -$LINES $0
echo -e "\033[0m<<<\n\n"

###START HERE###
kite-dataset create dataset:hdfs:/user/`whoami`/datasets/ratings --schema ratings.avsc --format parquet --partition-by partition.policy.json
hdfs dfs -ls -h /user/`whoami`/datasets/ratings/.metadata
