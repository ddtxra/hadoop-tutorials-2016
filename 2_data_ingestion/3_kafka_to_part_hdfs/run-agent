sed -e "s/<username>/`whoami`/g" conf/agent.conf

flume-ng agent \
	--classpath "classes/:/opt/cloudera/parcels/KAFKA/lib/kafka/libs/*" \
	--conf conf \
	--name htutorial-agent \
	--conf-file conf/agent.conf